<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="8dp"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_Event"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/ic_photo_size_select_actual_black_24dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/bottom_button_std_margin">

            <TextView
                android:id="@+id/txt_event_title"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_marginStart="@dimen/page_layout_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:hint="@string/text_view_title" />

            <TextView
                android:id="@+id/txt_event_date"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page_layout_margin"
                android:hint="@string/event_date"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/txt_event_contact_email"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page_layout_margin"
                android:hint="@string/event_contact_phone_hint"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/txt_event_contact_phone"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page_layout_margin"
                android:hint="@string/event_email_hint"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/txt_event_contact_location"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page_layout_margin"
                android:hint="@string/event_location_hint"
                android:textAllCaps="true" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
</androidx.cardview.widget.CardView>