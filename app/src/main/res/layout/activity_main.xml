<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/page_layout_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_layout_bottom_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:layout_marginEnd="@dimen/main_title_right_margin"
            android:text="@string/title_label"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/title_label_size" />

        <TextView
            android:id="@+id/subtitleLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle_label"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/subtitle_lable_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/main_text_lable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="monospace"
        android:text="@string/main_text_label"
        android:textSize="@dimen/text_verbose_label" />

    <ImageView
        android:id="@+id/imgPeople"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-4dp"
        android:layout_weight="1"
        android:contentDescription="@string/imgPeople_cd"
        app:srcCompat="@drawable/people_main" />

    <Button
        android:id="@+id/btnOrganizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/bottom_button_std_margin"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btnOrganizers_text"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnBusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_button_std_margin"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btnBusiness_text"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnVisitor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_button_std_margin"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btnVisitor_text"
        android:textColor="@color/white" />

</LinearLayout>